{
  "name": "dm-companion",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://StuffIMake.github.io/campaignorganizer/",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:coverage": "playwright test",
    "report:coverage": "npx nyc report --reporter=html",
    "report:coverage:text": "npx nyc report --reporter=text-summary",
    "debug:coverage": "node e2e/debug-coverage.js",
    "check:coverage-data": "node e2e/check-coverage-data.js",
    "inject:coverage-tab": "node e2e/inject-coverage-tab.js",
    "test:with-coverage:run": "npm run test:e2e:coverage",
    "test:with-coverage:report": "npm run check:coverage-data && npm run report:coverage && npm run inject:coverage-tab",
    "test:with-coverage": "echo 'Run these commands in sequence:\\n1. npm run test:with-coverage:run\\n2. npm run test:with-coverage:report\\n3. npx playwright show-report'"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@tailwindcss/vite": "^4.0.17",
    "clsx": "^2.1.1",
    "howler": "^2.2.4",
    "immer": "^10.1.1",
    "mapbox-gl": "^2.15.0",
    "react": "^18.2.0",
    "react-aria": "^3.38.1",
    "react-aria-components": "^1.7.1",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-map-gl": "^7.1.7",
    "react-markdown": "^10.1.0",
    "react-pdf": "^9.2.1",
    "react-router-dom": "^6.21.3",
    "react-zoom-pan-pinch": "^3.7.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.17",
    "uuid": "^11.1.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@playwright/test": "^1.51.1",
    "@types/file-saver": "^2.0.7",
    "@types/howler": "^2.2.12",
    "@types/jszip": "^3.4.0",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "mime-types": "^3.0.1",
    "nyc": "^17.1.0",
    "playwright-test-coverage": "^1.2.12",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-istanbul": "^7.0.0"
  }
}
